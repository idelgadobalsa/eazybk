<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout01"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="25sp"
    android:paddingRight="25sp"
    android:paddingTop="2sp" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom" >

        <TextView
            android:id="@+id/loanName"
            style="@style/text36pxgreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loan Name" />

        <LinearLayout
            android:id="@+id/linearLayout_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right" >

            <TextView
                android:id="@+id/textView2"
                style="@style/text18pxgray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01/01/2011" />
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="36px"
        android:max="100"
        android:progress="20"
        android:progressDrawable="@drawable/custom_pb_loan" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView3"
            style="@style/text18pxgray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/01/2222" />

        <LinearLayout
            android:id="@+id/linearLayout_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="month fee: "
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00.00"
                style="@style/text24pxred" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/euro_Symbol"
                style="@style/text24pxred" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>